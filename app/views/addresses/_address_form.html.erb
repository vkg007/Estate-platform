<%= render "shared/error_messages", target: @address %>
<div class="container h-100">
  <div class="row h-100 justify-content-center align-items-center">
    <%= form_for ([ @addressable, @address ]), class: "col-12" do |f| %>
      <div class="form-group">
        <%= f.label :City %>
        <%= f.text_field :city , class: 'form-control', placeholder: 'City Name' %>
      </div>
      <div class="form-group">
        <%= f.label :Pincode %>
        <%= f.text_field :pincode , class: 'form-control', placeholder: 'pincode'%>
      </div>
      <div class="form-group">
        <%= f.label :Full_Address %>
        <%= f.text_field :full_address, class: 'form-control', placeholder: 'Full Address' %>
      </div>
      <div class="form-group">
        <%= f.submit 'Save', class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>

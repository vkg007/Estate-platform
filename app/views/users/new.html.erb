<h1>Sign Up</h1>
<p>All fields are required and Password should be 6-40 in length</p>

<% if @user.errors.any? %>
  <p>Please correct the following errors:</p>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
       <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @user  do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br><br>
  
  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br><br>
  
  <%= f.label :email %>
  <%= f.email_field :email %><br><br>
  
  <%= f.label :mobile %>
  <%= f.text_field :mobile %><br><br>
 
  <%= f.label :password %>
  <%= f.password_field :password %><br><br>
 
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br><br>

  <%= f.label :picture %>
  <%= f.file_field :pic %><br><br>

  <%= f.submit 'Register' %>
<% end %>
<%= link_to 'Login', login_path %>


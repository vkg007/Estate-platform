<h1>Sign Up</h1>

<%= render "shared/error_messages", :target => @user %>

<%= form_for @user  do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %><br><br>
  
  <%= f.label :last_name %>
  <%= f.text_field :last_name %><br><br>
  
  <%= f.label :email %>
  <%= f.email_field :email %><br><br>
  
  <%= f.label :mobile %>
  <%= f.text_field :mobile %><br><br>
 
  <%= f.label :password %>
  <%= f.password_field :password %><br><br>
 
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %><br><br>

  <%= f.label :picture %>
  <%= f.file_field :pic %><br><br>

  <%= f.submit 'Register' %>
<% end %>
<%= link_to 'Login', new_session_path %>
